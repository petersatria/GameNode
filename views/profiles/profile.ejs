<% layout('layouts/boilerplate')%>

<div class="container my-5">
	<div class="view-user p-5">

		<div class="row mb-5">
			<div class="col text-center">
				<h3>Profile of <%= user.username %> </h3>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">First Name</th>
							<th scope="col">Last Name</th>
							<th scope="col">Email</th>
							<th scope="col">Phone</th>
							<th scope="col">Address</th>
							<th scope="col">Birth Date</th>
							<th scope="col">Gender</th>
						</tr>
					</thead>
					<tbody>
						<% user.user_profile.forEach(element => { %>
						<tr>
							<th scope="row"><%= element.first_name %></th>
							<td><%= element.last_name %></td>
							<td><%= user.email %></td>
							<td><%= element.phone %></td>
							<td><%= element.address %></td>
							<td><%= element.birthdate %></td>
							<td><%= element.gender %></td>
						</tr>
						<% }); %>
					</tbody>
				</table>
				<a href="/dashboard/" type="button" class="btn btn-light">Back</a>
				<a href="/dashboard/<%= user._id %>/edit" class="btn btn-success">Edit</a>
			</div>
		</div>
	</div>
</div>